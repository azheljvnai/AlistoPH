# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Database
MONGODB_URI=mongodb://localhost:27017/alistoph
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/alistoph?retryWrites=true&w=majority

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=ap-southeast-1

# S3 Configuration
S3_BUCKET_NAME=alistoph-uploads

# SNS Configuration (for push notifications)
SNS_PLATFORM_ARN=arn:aws:sns:ap-southeast-1:account-id:app/APNS/alistoph-ios

# SES Configuration (for emails)
SES_FROM_EMAIL=noreply@alistoph.com

# Weather API (OpenWeatherMap or similar)
WEATHER_API_KEY=your-weather-api-key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# External APIs
PHILIPPINES_WEATHER_API_URL=https://api.openweathermap.org/data/2.5
